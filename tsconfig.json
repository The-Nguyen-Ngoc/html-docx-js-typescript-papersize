{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es5",
    "lib": ["es5", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/*"]
}
